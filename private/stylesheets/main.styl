/* nib utilities for stylus */
@import 'nib'

opml-blue = #2b91a2
lightgrey = #f3f3f3
lightblack = #2a2a2a
midgrey = #a2a2a2
white = #fefefe
link-blue = #5bb7e3
midgrey = darken(lightgrey, 30%)

body
  font-family 'Helvetica' Arial sans-serif
  color lightblack
  background-color lightgrey
  margin 0

header
  font-family 'Helvetica'
  margin 0
  color opml-blue
  font-size 25px
  text-align center
  
 .button {
    background-color:  #2b91a2;
  	border: none;
    color: white;
    padding: 16px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    cursor: pointer;
    border-radius: 8px;
    font-family: 'Comic Sans MS'
}

.button1 {
    background-color: #4CAF50; /* Green */
    border: none;
    color: white;
    padding: 16px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    cursor: pointer;
    border-radius: 8px;
    font-family: 'Comic Sans MS'
}

.button2 {
    background-color: white;
    color: black;
    border: 2px solid #4CAF50;
}

.button2:hover {
    background-color: #4CAF50;
    color: white;
}
 
a
  text-decoration none
  color link-blue

a:visited
  color lighten(link-blue, 30%)

.container
  width 850px
  margin 0px auto
  overflow hidden

.main-content
  width 800px
  padding 20px 20px
  border-radius 10px 10px
  color lightblack
  background-color	white
p
  margin 20px 10px

.error
  font-size: 13px
  color darken(red, 30%)

#drop-target
  border: 8px dotted midgrey
  border-radius: 20px
  text-align: center
  padding: 200px
  background-color	#ADD8E6

.file
  background-color lightgrey
  border-radius 8px
  margin 10px 0
  padding 4px

.file p
  margin: 8px 4px

.logout
  padding 0
  margin 40px 4px 4px 4px
  font-size 15px

footer
  width 500px
  margin 50px auto
  background-color lightgrey
  color midgrey
  padding-top 5px
  font-size 13px


.spinner
  display inline-block
  margin 0
  width 70px
  text-align center

.spinner > div 
  width 14px
  height 14px
  background-color opml-blue

  border-radius 100%
  display inline-block
  animation bouncedelay 1.4s infinite ease-in-out
  /* Prevent first frame from flickering when animation starts */
  animation-fill-mode both

.spinner .bounce1
  -webkit-animation-delay -0.32s
  animation-delay -0.32s

.spinner .bounce2 
  -webkit-animation-delay -0.16s
  animation-delay -0.16s

@-webkit-keyframes bouncedelay 
  0%, 80%, 100% 
    transform scale(0.0)

@keyframes bouncedelay 
  0%, 80%, 100%  
    transform scale(0.0)
  40%  
    transform scale(1.0)
  

